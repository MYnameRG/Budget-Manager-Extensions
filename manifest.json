{
    "manifest_version": 2,
    "name": "Budget Manager",
    "version": "1.0",
    "description": "A Tracker for your overall spendings",
    "icons": {
        "128": "icon128x128.png",
        "48": "icon48x48.png",
        "16": "icon16x16.png"
    },
    "browser_action": {
        "default_icon": "icon16x16.png",
        "default_popup": "popup.html"
    },
    "options_page": "options.html",
    "background": {
        "scripts": ["eventPage.js"],
        "persistent": false
    },
    "permissions": [
        "storage",
        "notifications",
        "contextMenus"
    ]
}